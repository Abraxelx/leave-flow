<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #2196F3, #1976D2);" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <!-- Logo -->
    <ImageView fx:id="splashLogo" fitHeight="140" fitWidth="140" preserveRatio="true" />
    
    <!-- Uygulama İsmi -->
    <VBox alignment="CENTER" spacing="5">
        <Label text="LeaveFlow" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Label text="Çalışan İzin Yönetim Sistemi" style="-fx-font-size: 16px; -fx-text-fill: #E3F2FD;" />
    </VBox>
    
    <!-- Yükleniyor -->
    <VBox alignment="CENTER" spacing="10">
        <ProgressIndicator fx:id="progressIndicator" style="-fx-progress-color: white;" />
        <Label text="Yükleniyor..." style="-fx-font-size: 14px; -fx-text-fill: white;" />
    </VBox>
    
    <!-- Geliştirici Bilgisi -->
    <Label text="Geliştirici: Halil Şahin" style="-fx-font-size: 12px; -fx-text-fill: #BBDEFB;" />
</VBox> 